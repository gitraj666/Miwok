<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation = "vertical"
    android:background="#9c27b0"
    tools:context="com.example.prithviraj.miwok.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="NUMBERS"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorText1"
        android:background="@color/colorTextView1"
        android:textSize="22dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:onClick="openNumbersList"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="COLORS"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorText2"
        android:background="#ef6c00"
        android:textSize="22dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:onClick="openColorsList"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="FAMILY"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorText3"
        android:background="#f4ff81"
        android:textSize="22dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:onClick="openFamilyList"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="PHRASES"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:background="@color/colorTextView4"
        android:textSize="22dp"
        android:layout_marginBottom="160dp"
        android:onClick="openPhrasesList"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="--prithviraj"
        android:gravity="right"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="22dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin" />

</LinearLayout>
